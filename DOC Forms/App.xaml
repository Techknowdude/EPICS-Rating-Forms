<Application x:Class="DOC_Forms.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DOC_Forms"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="HeadingLabel" TargetType="Label">
            <Setter Property="FontSize" Value="20"></Setter>
        </Style>
        <Style x:Key="SubHeadingLabel" TargetType="Label">
            <Setter Property="FontSize" Value="16"></Setter>
            <Setter Property="FontWeight" Value="Bold"></Setter>
            <Setter Property="Margin" Value="5,10"></Setter>
        </Style>

        <Style x:Key="Heading2Label" TargetType="Label">
            <Setter Property="FontSize" Value="14"></Setter>
        </Style>

        <Style x:Key="OtherLabel" TargetType="Label">
            <Setter Property="FontSize" Value="12"></Setter>
        </Style>
        <Style x:Key="GridBorderStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="Black"></Setter>
            <Setter Property="BorderThickness" Value="1"></Setter>
        </Style>
    </Application.Resources>
</Application>
