<Window x:Class="DOC_Forms.EpicsRatingFormA"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DOC_Forms"
        mc:Ignorable="d"
        Title="Epics Coding Form" Height="650" Width="800"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Window.InputBindings>
        <KeyBinding Key="Right" Command="{Binding NextPageCommand}"></KeyBinding>
        <KeyBinding Key="Left" Command="{Binding PrevPageCommand}"></KeyBinding>
    </Window.InputBindings>
    <Grid>
        <Menu Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150">
            <MenuItem x:Name="SaveMenuItem" Height="20" Width="50" Header="_Save" Click="SaveMenuItem_Click"/>
            <MenuItem x:Name="LoadMenuItem" Width="50" Header="_Load" Click="LoadMenuItem_OnClick"/>
            <MenuItem x:Name="ExcelMenuItem" Width="50" Header="_Export" Click="ExcelMenuItem_OnClick"/>
        </Menu>
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Margin="0,20,0,30">
            <Frame x:Name="PageFrame" NavigationUIVisibility="Hidden"></Frame>
        </ScrollViewer>
        <Button x:Name="PrevPageButton" Margin="10,1,1,5" Width="60" VerticalAlignment="Bottom" HorizontalAlignment="Left" >Prev</Button>
        <Label HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,1,1,5">Page</Label>
        <Label x:Name="PageLabel" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="35,1,1,5">1</Label>
        <Button x:Name="NextPageButton" Margin="1,1,10,5" Width="60" VerticalAlignment="Bottom" HorizontalAlignment="Right">Next</Button>
    </Grid>
</Window>
