<Page x:Class="DOC_Forms.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DOC_Forms"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="800"
      Title="Page1">

    <Grid>
        <StackPanel>
            <Label Content="EPICS CODING FORM" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="5"/>
            <Grid Height="50">
                <Label Content="Instructions:" Margin="5,0"></Label>
                <Label FontSize="10" Margin="0,3" Content="                          Please complete the coding form below for each recorded EPICS session. Refer to the coding manual as you proceed and note specific strengths and areas for"/>
                <Label FontSize="10" Margin="5,15,0,0">improvement.</Label>
            </Grid>
            <Grid>
                <Rectangle Fill="Black" Height="28" Stroke="Black" VerticalAlignment="Top"/>
                <Label Margin="5,0" Width="260" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top">Session Information</Label>
            </Grid>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width=".8*"/>
                    <ColumnDefinition Width=".5*"/>
                    <ColumnDefinition Width=".8*"/>
                    <ColumnDefinition Width="1.9*"/>
                </Grid.ColumnDefinitions>
                <Label BorderThickness="1" BorderBrush="Black" Grid.Row="0" Grid.Column="0">Session date:</Label>
                <DatePicker BorderThickness="1" BorderBrush="Black" x:Name="SessionDate" Grid.Row="0" Grid.Column="1" ></DatePicker>
                <Label BorderThickness="1" BorderBrush="Black" Grid.Row="0" Grid.Column="2">Staff's name:</Label>
                <TextBox BorderThickness="1" BorderBrush="Black" x:Name="StaffName" Grid.Row="0" Grid.Column="3" ></TextBox>

                <Label BorderThickness="1" BorderBrush="Black" Grid.Row="1" Grid.Column="0">Review date:</Label>
                <DatePicker BorderThickness="1" BorderBrush="Black" x:Name="ReviewDate" Grid.Row="1" Grid.Column="1" ></DatePicker>
                <Label BorderThickness="1" BorderBrush="Black" Grid.Row="1" Grid.Column="2">Reviewer's name:</Label>
                <TextBox BorderThickness="1" BorderBrush="Black" x:Name="ReviewerName" Grid.Row="1" Grid.Column="3"></TextBox>

                <Label BorderThickness="1" BorderBrush="Black" Grid.Row="2" Grid.Column="0">Caseload number:</Label>
                <TextBox BorderThickness="1" BorderBrush="Black" x:Name="CaseloadNumber" Grid.Row="2" Grid.Column="1" ></TextBox>
                <Label BorderThickness="1" BorderBrush="Black" Grid.Row="2" Grid.Column="2">Client's name:</Label>
                <TextBox BorderThickness="1" BorderBrush="Black" x:Name="ClientName" Grid.Row="2" Grid.Column="3"></TextBox>

                <Label Grid.Row="3" Grid.Column="0">Session length (mins):</Label>
                <TextBox x:Name="SessionLength" Grid.Row="3" Grid.Column="1" ></TextBox>
                <Label Grid.Row="3" Grid.Column="2">Client SID#:</Label>
                <TextBox x:Name="ClientSID" Grid.Row="3" Grid.Column="3"></TextBox>
            </Grid>
        </StackPanel>
        
        
    </Grid>
</Page>
